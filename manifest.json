{
  "manifest_version": 2,
  "name": "RepeatIt",
  "description": "A User Action Simulator",
  "version": "0.1",
  "permissions": [
    "storage",
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "img/icon48.png",
      "38": "img/icon48.png"
    },
    "default_popup": "popup.html"
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "web_accessible_resources": [
    "img/icon128.png",
    "inject.js",
    "recipes.json"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/jquery-2.0.3.min.js",
      "background.js"
    ]
  },
  "externally_connectable": {
    "matches": [
      "*://*.snapwiz.net/*",
      "*://*.edulastic.net/*",
      "*://*.edulastic.com/*",
      "*://*.snapwiz.com/*"
    ]
  }
}